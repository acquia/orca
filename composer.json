{
    "name": "acquia/orca",
    "description": "An internal tool for testing all of Acquia's product modules together in the context of a realistic, functioning, best practices Drupal build",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Acquia Engineering",
            "homepage": "https://www.acquia.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-json": "*",
        "ext-mcrypt": "*",
        "behat/behat": "^3.5",
        "consolidation/robo": "~1",
        "drupal/drupal-extension": "~3.0",
        "phpunit/phpunit": "^4.8.35 || ^6.1"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "drupal/coder": "^8.2.12",
        "geerlingguy/drupal-vm": "^4.9"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": "vendor/bin/phpcs",
            "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
            "post-update-cmd": "vendor/bin/cghooks update"
        }
    },
    "autoload": {
        "psr-4": {
            "Acquia\\Orca\\": "src",
            "Acquia\\Orca\\Exception\\": "src/Exception",
            "Acquia\\Orca\\Robo\\Plugin\\Commands\\": "src/Command"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/orca"
    ],
    "scripts": {
        "cghooks": "cghooks --ansi",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs"
    }
}
