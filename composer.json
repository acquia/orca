{
    "name": "acquia/orca",
    "description": "A tool for testing all of Acquia's software packages together in the context of a realistic, functioning, best practices Drupal build",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Acquia Engineering",
            "homepage": "https://www.acquia.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-sqlite3": "*",
        "behat/behat": "^3.5",
        "composer/composer": "^1.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5",
        "drupal/coder": "^8.3",
        "hassankhan/config": "^2.0",
        "jakub-onderka/php-console-highlighter": "^0.4.0",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "lbaey/chromedriver": "^1.1",
        "pheromone/phpcs-security-audit": "^2.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.5",
        "symfony/config": "^4.1",
        "symfony/console": "^4.1",
        "symfony/dependency-injection": "^4.1",
        "symfony/filesystem": "^4.1",
        "symfony/finder": "^4.1",
        "symfony/http-kernel": "^4.1",
        "symfony/options-resolver": "^4.2",
        "symfony/process": "^4.1",
        "symfony/yaml": "^4.1",
        "weitzman/drupal-test-traits": "~1.0"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.5",
        "localheinz/composer-normalize": "^0.9.0",
        "neronmoon/scriptsdev": "^0.1.3",
        "sensiolabs/security-checker": "^5.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "set -e",
                "vendor/bin/parallel-lint --exclude vendor --no-progress .",
                "vendor/bin/phpcs --cache=var/.phpcs-cache",
                "vendor/bin/phpmd . text phpmd.xml.dist --ignore-violations-on-exit"
            ],
            "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
            "post-update-cmd": "vendor/bin/cghooks update"
        },
        "lbaey/chromedriver": {
            "bypass-select": true,
            "chromedriver-version": "2.45"
        },
        "phpcodesniffer-search-depth": 4,
        "scripts-dev": {
            "post-install-cmd": [
                "@auto-scripts"
            ],
            "post-update-cmd": [
                "@auto-scripts"
            ],
            "auto-scripts": [
                "@composer normalize",
                "vendor/bin/security-checker security:check"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Acquia\\Orca\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acquia\\Orca\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/orca"
    ],
    "scripts": {
        "cghooks": "cghooks --ansi",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs --cache=var/.phpcs-cache",
        "phplint": "parallel-lint --exclude vendor --ignore-fails .",
        "phpmd": "phpmd . text phpmd.xml.dist --ignore-violations-on-exit",
        "phpunit": "phpunit"
    }
}
